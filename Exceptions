#include <iostream>
using namespace std;

class Item {
public:
    string name;
    double price;
    int quantity;
    static int stock;

    Item(string _name, double _price, int _quantity) {
        if (_price <= 0) {
            cout << "Price must be positive!" << endl;
            return;
        }
        if (_quantity > stock) {
            cout << "Not enough stock available!" << endl;
            return;
        }
        name = _name;
        price = _price;
        quantity = _quantity;
        stock -= _quantity;
    }

    void show() {
        cout << "Item: " << name << ", Price: " << price << ", Quantity: " << quantity << endl;
    }
};

int Item::stock = 10;

int main() {
    Item cart[] = {
        Item("Laptop", 15000.50, 2),
        Item("Mouse", 500, 5),
        Item("Keyboard", 1200, 3)
    };

    for (int i = 0; i < 3; i++) {
        cart[i].show();
    }
    return 0;
}
