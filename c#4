using System;

class student
{
    public int familia { get; set; }
    public int imya { get; set; }
    public int otchestvo { get; set; }
    public int gruppa { get; set; }
    public int vozrast { get; set; }
    private int[][] ocenki;

    public student(int familia, int imya, int otchestvo, int gruppa, int vozrast)
    {
        this.familia = familia;
        this.imya = imya;
        this.otchestvo = otchestvo;
        this.gruppa = gruppa;
        this.vozrast = vozrast;
        ocenki = new int[3][];
        ocenki[0] = new int[0];
        ocenki[1] = new int[0];
        ocenki[2] = new int[0];
    }

    public void dobavitOcenku(int predmet, int ocenka)
    {
        if (predmet < 0 || predmet >= ocenki.Length)
        {
            Console.WriteLine("неверный индекс предмета ");
            return;
        }
        Array.Resize(ref ocenki[predmet], ocenki[predmet].Length + 1);
        ocenki[predmet][ocenki[predmet].Length - 1] = ocenka;
    }

    public double sredniyBall(int predmet)
    {
        if (predmet < 0 || predmet >= ocenki.Length || ocenki[predmet].Length == 0)
        {
            Console.WriteLine("неверный индекс предмета или нет оценок ");
            return 0;
        }

        int sum = 0;
        foreach (var ocenka in ocenki[predmet])
        {
            sum += ocenka;
        }

        return (double)sum / ocenki[predmet].Length;
    }

    public void pechat()
    {
        Console.WriteLine("студент  " + familia + " " + imya + " " + otchestvo + ", группа: " + gruppa + ", возраст  " + vozrast);
        Console.WriteLine("оценки по программированию  " + string.Join(", ", ocenki[0]));
        Console.WriteLine("оценки по администрированию  " + string.Join(", ", ocenki[1]));
        Console.WriteLine("оценки по дизайну  " + string.Join(", ", ocenki[2]));
    }
}

class programma
{
    static void Main()
    {
        Console.Write("введите фамилию студента число  ");
        int familia = int.Parse(Console.ReadLine());

        Console.Write("введите имя студента число ");
        int imya = int.Parse(Console.ReadLine());

        Console.Write("введите отчество студента число  ");
        int otchestvo = int.Parse(Console.ReadLine());

        Console.Write("введите номер группы  ");
        int gruppa = int.Parse(Console.ReadLine());

        Console.Write("введите возраст студента  ");
        int vozrast = int.Parse(Console.ReadLine());

        student stud = new student(familia, imya, otchestvo, gruppa, vozrast);

        Console.WriteLine("введите оценки для студента ");

        Console.WriteLine("оценки по программированию ");
        while (true)
        {
            Console.Write("введите оценку по программированию или q для завершения ");
            string input = Console.ReadLine();
            if (input.ToLower() == "q") break;
            stud.dobavitOcenku(0, int.Parse(input));
        }

        Console.WriteLine("оценки по администрированию:");
        while (true)
        {
            Console.Write("введите оценку по администрированию или q для завершения ");
            string input = Console.ReadLine();
            if (input.ToLower() == "q") break;
            stud.dobavitOcenku(1, int.Parse(input));
        }

        Console.WriteLine("оценки по дизайну:");
        while (true)
        {
            Console.Write("введите оценку по дизайну или q для завершения ");
            string input = Console.ReadLine();
            if (input.ToLower() == "q") break;
            stud.dobavitOcenku(2, int.Parse(input));
        }

        stud.pechat();
        Console.WriteLine("средний балл по программированию " + stud.sredniyBall(0));
    }
}
