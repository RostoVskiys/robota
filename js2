//1
function power(num, pow) {
    if (pow === 0) return 1;
    return num * power(num, pow - 1);
}

//2
function gcd(a, b) {
    if (b === 0) return a;
    return gcd(b, a % b);
}

//3
function maxDigit(num) {
    num = Math.abs(num);
    if (num < 10) return num;
    let last = num % 10;
    let rest = Math.floor(num / 10);
    let maxRest = maxDigit(rest);
    return last > maxRest ? last : maxRest;
}

// 
console.log(power(2, 5));
console.log(gcd(48, 18));
console.log(maxDigit(59327));
